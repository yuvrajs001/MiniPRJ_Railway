@model List<CodeChallange10.Models.Customer>

@{
    ViewData["Title"] = "Customer Details by Order Date";
}

<h1>Customer Details for Orders Placed on @ViewBag.OrderDate</h1>

<table class="table">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Company Name</th>
            <th>Contact Name</th>
            <th>Contact Title</th>
            <th>Phone</th>
            <th>City</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.CustomerId</td>
                <td>@customer.CompanyName</td>
                <td>@customer.ContactName</td>
                <td>@customer.ContactTitle</td>
                <td>@customer.Phone</td>
                <td>@customer.City</td>
            </tr>
        }
    </tbody>
</table>
